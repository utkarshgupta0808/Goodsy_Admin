<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delivery_boy_card_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/colorPrimaryDark"
    app:strokeWidth="0.2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_photo"
            android:layout_width="40dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/colorPrimary"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:strokeWidth="0.2dp">

            <ImageView
                android:id="@+id/del_img"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="item_image" />

        </com.google.android.material.card.MaterialCardView>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/del_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Delivery Boy Name"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/del_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Delivery Boy Id" />


            <TextView
                android:id="@+id/del_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Delivery Boy City"
                android:layout_marginTop="2dp"
                android:maxLines="1"/>




            <TextView
                android:id="@+id/del_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Delivery Boy Number"
                />












        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            app:strokeColor="@color/colorPrimary"
            android:elevation="10dp"
            app:strokeWidth="0.2dp">

           <TextView
               android:id="@+id/del_rating"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="4.4"
               android:layout_gravity="center"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="12sp"/>

        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>

</com.google.android.material.card.MaterialCardView>